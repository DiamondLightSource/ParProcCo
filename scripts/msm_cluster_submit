#!/usr/bin/env python3
# -*- coding: utf-8 -*-

from __future__ import annotations

import argparse
import os
from pathlib import Path
from typing import List

from ParProcCo.job_controller import JobController
from ParProcCo.msm_data_slicer import MSMDataSlicer
from ParProcCo.msmapper_aggregator import MSMAggregator


def create_parser():
    '''
     $ msm_cluster_submit rs_map --jobs --cores 6 --memory 4G -s 0.01 ... [input files]
     '''
    parser = argparse.ArgumentParser(description='Miller Space Mapper run script for use with ParProcCo')
    parser.add_argument('-o', '--output-dir', help='str: cluster output directory', required=True)
    parser.add_argument('-j', '--jobs', help='int: number of cluster jobs to split processing into', required=True)
    parser.add_argument('-m', '--memory', help='str: memory to use per cluster job', required=True)
    parser.add_argument('-c', '--cores', help='int: number of cores to use per cluster job', required=True)
    return parser


def run_msm(args: argparse.Namespace, script_args: List) -> None:
    '''
    Run JobController
    '''
    jc = JobController(args.output_dir, "b24", "medium.q")
    args.jobs = int(args.jobs)
    args.cores = int(args.cores)
    current_script_dir = Path(os.path.realpath(__file__)).parent
    runner_script_path = current_script_dir / "msm_cluster_runner"
    agg_data_path = jc.run(MSMDataSlicer(), MSMAggregator(), args.jobs, runner_script_path, args.memory, args.cores,
                           script_args)
    print("complete")


if __name__ == '__main__':
    args, script_args = create_parser().parse_known_args()
    run_msm(args, script_args)
